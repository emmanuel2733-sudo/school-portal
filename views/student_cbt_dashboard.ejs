<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CBT Exams â€¢LYTEBRIDGE ACADEMY</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --pink: #ff6b9d;
      --cream: #fdf5e6;
      --light-pink: #ffe6f0;
      --gray: #6c757d;
      --shadow: 0 6px 16px rgba(255, 107, 157, 0.15);
      --bg: #fdf5e6;
      --card-bg: #ffffff;
      --text: #333333;
      --border: #ffe0e9;
      --radius: 16px;
    }

    [data-theme="dark"] {
      --pink: #ff8ab3;
      --light-pink: #2d1b3a;
      --gray: #b0b0b0;
      --shadow: 0 6px 16px rgba(0, 0, 0, 0.4);
      --bg: #121212;
      --card-bg: #1e1e1e;
      --text: #e0e0e0;
      --border: #333333;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      color: var(--text);
      transition: 0.3s;
    }

    /* TOP BAR */
    .top-bar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: var(--card-bg);
      padding: 1.2rem 1.5rem;
      box-shadow: var(--shadow);
      z-index: 1000;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid var(--border);
    }

    .school-name {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(90deg, var(--pink), #ff8ab3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .top-controls {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .theme-toggle {
      background: var(--card-bg);
      border: 2px solid var(--border);
      border-radius: 50px;
      width: 52px;
      height: 28px;
      position: relative;
      cursor: pointer;
    }

    .theme-toggle::before {
      content: '';
      position: absolute;
      top: 4px;
      left: 4px;
      width: 20px;
      height: 20px;
      background: var(--pink);
      border-radius: 50%;
      transition: 0.3s;
    }

    [data-theme="dark"] .theme-toggle::before {
      transform: translateX(24px);
    }

    .btn-back,
    .btn-logout {
      padding: 10px 18px;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .btn-back {
      border: 2px solid var(--pink);
      color: var(--text);
      background: transparent;
    }

    .btn-back:hover {
      background: var(--pink);
      color: white;
    }

    .btn-logout {
      background: var(--pink);
      color: white;
      box-shadow: var(--shadow);
    }

    /* MAIN CONTENT */
    .main-content {
      margin-top: 100px;
      padding: 20px;
      max-width: 1100px;
      margin-left: auto;
      margin-right: auto;
    }

    .page-title {
      text-align: center;
      font-size: 2.4rem;
      font-weight: 800;
      margin-bottom: 40px;
      background: linear-gradient(90deg, var(--pink), #ff8ab3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* TABLE */
    .cbt-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 12px;
    }

    .cbt-row {
      background: var(--card-bg);
      box-shadow: var(--shadow);
      border-radius: var(--radius);
      overflow: hidden;
    }

    th {
      text-align: left;
      padding: 14px;
      font-weight: 700;
      color: var(--pink);
    }

    td {
      padding: 16px;
      font-size: 0.95rem;
    }

    .badge-open {
      background: #28a745;
      color: #fff;
      padding: 6px 12px;
      border-radius: 8px;
    }

    .badge-not-open {
      background: #ffc107;
      padding: 6px 12px;
      border-radius: 8px;
    }

    .badge-closed {
      background: #dc3545;
      color: white;
      padding: 6px 12px;
      border-radius: 8px;
    }

    .write-btn {
      background: var(--pink);
      color: white;
      padding: 10px 20px;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      box-shadow: var(--shadow);
    }

    .write-btn.disabled {
      background: #aaa;
      pointer-events: none;
    }
  </style>
</head>

<body>

  <!-- TOP BAR -->
  <div class="top-bar">
    <div class="school-name">LA-VOGUE BRITISH INTERNATIONAL SCHOOL</div>

    <div class="top-controls">
      <button id="theme-toggle" class="theme-toggle"></button>
      <a href="/dashboard" class="btn-back"><i class="fas fa-arrow-left"></i> Back</a>
      <a href="/logout" class="btn-logout">Logout</a>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="main-content">
    <h1 class="page-title">Available CBT Exams</h1>

    <% if (exams.length === 0) { %>
      <div class="text-center py-5 text-muted">
        <i class="fas fa-clipboard-list fa-4x mb-4 opacity-50"></i>
        <h3>No CBT exams available.</h3>
      </div>
    <% } else { %>

      <table class="cbt-table">
        <thead>
          <tr>
            <th>S/N</th>
            <th>Course</th>
            <th>Exam Title</th>
            <th>Opens</th>
            <th>Closes</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% exams.forEach((ex, i) => { 
              let now = Date.now();
              let start = new Date(ex.start_time).getTime();
              let end = new Date(ex.end_time).getTime();

              let status = "";
              let canWrite = false;

              if (now < start) status = "Not Open";
              else if (now >= start && now <= end) { status = "Open"; canWrite = true; }
              else status = "Closed";
          %>

            <tr class="cbt-row">
              <td><%= i + 1 %></td>
              <td><%= ex.course_name %></td>
              <td><%= ex.title %></td>
              <td><%= ex.start_time %></td>
              <td><%= ex.end_time %></td>

              <td>
                <% if (status === "Open") { %>
                  <span class="badge-open">Open</span>
                <% } else if (status === "Not Open") { %>
                  <span class="badge-not-open">Not Open</span>
                <% } else { %>
                  <span class="badge-closed">Closed</span>
                <% } %>
              </td>

              <td>
                <% if (canWrite) { %>
                  <a href="/student/cbt/<%= ex.id %>/start" class="write-btn">Write</a>
                <% } else { %>
                  <a class="write-btn disabled">Write</a>
                <% } %>
              </td>
            </tr>

          <% }) %>
        </tbody>
      </table>

    <% } %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Dark/Light Mode Toggle
    const html = document.documentElement;
    const toggle = document.getElementById('theme-toggle');
    html.setAttribute('data-theme', localStorage.getItem('theme') || 'light');

    toggle.addEventListener('click', () => {
      const newTheme = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    });
  </script>

</body>

</html>
