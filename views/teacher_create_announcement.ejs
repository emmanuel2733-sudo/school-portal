<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>New Announcement</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"/>

  <style>
    body {
      background: #f8fafc;
      font-family: 'Segoe UI', sans-serif;
    }

    /* NAVBAR */
    .navbar {
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 1000;
      background: white;
      padding: 1.2rem 0;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      border-bottom: 1px solid #e2e8f0;
    }

    .navbar-brand {
      font-weight: 800;
      font-size: 1.8rem;
      color: #1a202c;
    }

    .back-btn {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: #6366f1;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.4rem;
      text-decoration: none;
      box-shadow: 0 5px 15px rgba(0,0,0,0.15);
      transition: 0.3s;
    }

    .back-btn:hover {
      background: #4f46e5;
      transform: scale(1.1);
    }

    .content {
      margin-top: 120px;
      padding: 40px 20px;
    }

    .form-card {
      background: white;
      border-radius: 16px;
      padding: 40px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .form-label {
      font-weight: 700;
      color: #1a202c;
    }

    .form-control {
      padding: 14px;
      border-radius: 12px;
      border: 1px solid #e2e8f0;
    }

    .form-control:focus {
      border-color: #f56565;
      box-shadow: 0 0 0 0.15rem rgba(245,101,101,0.25);
    }

    .save-btn {
      background: linear-gradient(135deg,#f56565,#e53e3e);
      color: white;
      font-weight: 700;
      padding: 14px 30px;
      border-radius: 12px;
      border: none;
      box-shadow: 0 8px 25px rgba(229,62,62,0.35);
    }

    .save-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 30px rgba(229,62,62,0.45);
    }

    .cancel-btn {
      padding: 14px 30px;
      border-radius: 12px;
      font-weight: 700;
    }
  </style>
</head>

<body>

<!-- TEACHER NAVBAR -->
<nav class="navbar">
  <div class="container-fluid px-4">
    <a class="navbar-brand" href="/dashboard">School Portal</a>

    <div class="d-flex align-items-center gap-3">
    <% if (typeof classTeacherOf !== 'undefined' && classTeacherOf) { %>

        <div style="
          background: linear-gradient(135deg,#ff6b9d,#ff8ab3);
          color:white;
          padding:10px 24px;
          border-radius:50px;
          font-weight:700;
          box-shadow:0 5px 15px rgba(255,107,157,0.4);
        ">
          Class Teacher â€” <%= classTeacherOf %>
        </div>
      <% } %>

      <a href="/teacher/announcements" class="back-btn" title="Back">
        <i class="fas fa-arrow-left"></i>
      </a>
    </div>
  </div>
</nav>

<!-- CONTENT -->
<div class="content container" style="max-width:700px;">

  <div class="form-card">
    <h2 style="font-weight:800;margin-bottom:30px;">
      <i class="fas fa-bullhorn text-danger"></i>
      New Announcement
    </h2>

    <form method="POST" action="/teacher/announcements">

      <div class="mb-4">
        <label class="form-label">Announcement Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="Enter announcement title"
          required
        >
      </div>

      <div class="mb-4">
        <label class="form-label">Announcement Message</label>
        <textarea
          name="body"
          rows="6"
          class="form-control"
          placeholder="Write the announcement here..."
          required
        ></textarea>
      </div>

      <div class="d-flex gap-3">
        <button type="submit" class="save-btn">
          <i class="fas fa-save"></i> Save
        </button>

        <a href="/teacher/announcements" class="btn btn-secondary cancel-btn">
          Cancel
        </a>
      </div>

    </form>
  </div>

</div>

</body>
</html>
