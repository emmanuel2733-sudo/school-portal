<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Behaviour Rating • LYTEBRIDGE ACADEMY</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background: #fdf5e6;
      font-family: 'Poppins', sans-serif;
    }

    /* TOP NAV */
    .top-bar {
      position: fixed;
      top: 0; left: 0; right: 0;
      background: #fff;
      padding: 1.2rem 1.5rem;
      box-shadow: 0 6px 16px rgba(255,107,157,.15);
      z-index: 1000;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #ffe0e9;
    }

    .school-name {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(90deg,#ff6b9d,#ff8ab3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .back-btn {
      padding: 10px 18px;
      border-radius: 50px;
      font-weight: 600;
      border: 2px solid #ff6b9d;
      background: transparent;
      color: #333;
      text-decoration: none;
    }

    .back-btn:hover {
      background: #ff6b9d;
      color: white;
    }

    /* CONTENT */
    .content {
      margin-top: 110px;
      padding: 30px;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }

    h2 {
      font-weight: 800;
      margin-bottom: 25px;
      text-align: center;
    }

    table th {
      background: #ffe6f0;
      text-align: center;
      font-size: 0.85rem;
    }

    table td {
      text-align: center;
      vertical-align: middle;
    }

    .student-name {
      font-weight: 600;
      text-align: left;
      white-space: nowrap;
    }

    input[type="number"] {
      width: 65px;
      text-align: center;
      margin: auto;
    }
  </style>
</head>

<body>

<!-- TOP BAR -->
<div class="top-bar">
  <div class="school-name">LYTEBRIDGE ACADEMY</div>
  <a href="/dashboard" class="back-btn">
    <i class="fas fa-arrow-left"></i> Dashboard
  </a>
</div>

<!-- MAIN CONTENT -->
<div class="content">

  <h2>Behaviour Rating — <%= classTeacherOf %></h2>

  <% if (!students || students.length === 0) { %>
    <div class="alert alert-warning text-center">
      No students found for your class this term.
    </div>
  <% } else { %>

  <form method="POST" action="/teacher/behaviour">

    <div class="table-responsive">
      <table class="table table-bordered table-sm align-middle">
        <thead>
          <tr>
            <th>Student</th>
            <th>Handwriting</th>
            <th>Neatness</th>
            <th>Punctuality</th>
            <th>Attentiveness</th>
            <th>Initiative</th>
            <th>Respect</th>
            <th>Obedience</th>
            <th>Attitude</th>
            <th>Honesty</th>
            <th>Creativity</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(s => { %>
            <tr>
              <td class="student-name"><%= s.student_name %></td>

              <% [
                'handwriting','neatness','punctuality','attentiveness',
                'initiative','respect','obedience','attitude',
                'honesty','creativity'
              ].forEach(trait => { %>
                <td>
                  <input
                    type="number"
                    name="ratings[<%= s.student_id %>][<%= trait %>]"
                    min="1"
                    max="5"
                    required
                    class="form-control form-control-sm">
                </td>
              <% }) %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <button class="btn btn-lg btn-primary px-5">
        <i class="fas fa-save"></i> Save Behaviour Ratings
      </button>
    </div>

  </form>
  <% } %>

</div>

</body>
</html>
