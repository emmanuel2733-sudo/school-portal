<!DOCTYPE html>
<html>
<head>
  <title>School Portal - Create User</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 0; background: #f0f2f5; }
    .container { max-width: 520px; margin: 40px auto; padding: 32px; background: white; border-radius: 14px; box-shadow: 0 6px 25px rgba(0,0,0,0.12); }
    h1 { text-align: center; color: #2c3e50; margin-bottom: 24px; }
    .msg { padding: 14px; margin-bottom: 18px; border-radius: 10px; font-size: 15px; text-align: center; }
    .success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; }
    .error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; }
    .form-group { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; color: #2d3748; font-weight: 600; font-size: 15px; }
    }
    input, select { width: 100%; padding: 12px 14px; border: 1px solid #e2e8f0; border-radius: 10px; box-sizing: border-box; font-size: 15px; background: #fcfcfc; }
    input:focus, select:focus { border-color: #ff6b9d; outline: none; box-shadow: 0 0 0 4px rgba(255,107,157,0.15); }
    button { width: 100%; padding: 14px; background: linear-gradient(135deg, #ff6b9d, #ff8ab3); color: white; border: none; border-radius: 12px; cursor: pointer; font-size: 17px; font-weight: 600; margin-top: 15px; }
    button:hover { transform: translateY(-2px); box-shadow: 0 8px 20px rgba(255,107,157,0.3); }
    .back-link { text-align: center; margin-top: 25px; font-size: 15px; }
    .back-link a { color: #ff6b3d0; text-decoration: none; font-weight: 500; }
    .photo-preview { width: 140px; height: 140px; border-radius: 50%; object-fit: cover; margin: 12px auto; display: block; border: 5px solid #fff; box-shadow: 0 6px 20px rgba(255,107,157,0.25); }
    .upload-label { display: block; text-align: center; margin-top: 12px; color: #ff6b9d; cursor: pointer; font-weight: 600; font-size: 15px; }
    .section-title { font-size: 18px; font-weight: 700; color: #ff6b9d; margin: 35px 0 20px; text-align: center; padding-bottom: 10px; border-bottom: 3px solid #ffe6f0; }
  </style>
</head>
<body>

  <!-- THIS LINE FIXES ALL ERRORS -->
  <% const { successMsg=null, errorMsg=null, errors=[], userInput={} } = locals; %>

  <div class="container">
    <h1>Create New User</h1>

    <% if (successMsg) { %>
      <div class="msg success"><%= successMsg %></div>
    <% } %>
    <% if (errorMsg) { %>
      <div class="msg error"><%= errorMsg %></div>
    <% } %>
    <% if (errors && errors.length > 0) { %>
      <div class="msg error">
        <% errors.forEach(error => { %>
          <p><%= error.msg %></p>
        <% }) %>
      </div>
    <% } %>

    <form action="/register" method="POST" enctype="multipart/form-data">

      <!-- Profile Photo -->
      <div class="form-group">
        <label>Profile Photo</label>
        <img src="/uploads/default-photo.jpg" alt="Preview" class="photo-preview" id="preview">
        <input type="file" name="photo" accept="image/jpeg,image/png" onchange="previewPhoto(event)" style="display:none">
        <label class="upload-label" onclick="this.previousElementSibling.click()">Choose Photo (Optional)</label>
      </div>

      <!-- Basic Info -->
      <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" value="<%= userInput.username || '' %>" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" required minlength="6">
      </div>

      <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="name" value="<%= userInput.name || '' %>" required>
      </div>

      <div class="form-group">
        <label>Sex</label>
        <select name="sex" required>
          <option value="">Select</option>
          <option value="Male" <%= userInput.sex === 'Male' ? 'selected' : '' %>>Male</option>
          <option value="Female" <%= userInput.sex === 'Female' ? 'selected' : '' %>>Female</option>
        </select>
      </div>

      <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" name="dob" value="<%= userInput.dob || '' %>" required>
      </div>

      <div class="form-group">
        <label>Address</label>
        <input type="text" name="address" value="<%= userInput.address || '' %>" required>
      </div>
           <div class="form-group">
        <label>Role</label>
        <select name="role" required>
          <option value="">Select Role</option>
          <option value="student" <%= userInput.role === 'student' ? 'selected' : '' %>>Student</option>
          <option value="teacher" <%= userInput.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
        </select>
      </div>

      <!-- Parent / Guardian / Next of kin Section - NOW MATCHES DATABASE -->
      <div class="section-title">Next of kin Information</div>

      <div class="form-group">
        <label>Name</label>
        <input type="text" name="parent_name" value="<%= userInput.parent_name || '' %>" required>
      </div>

      <div class="form-group">
        <label>Mobile Number</label>
        <input type="tel" name="parent_phone" value="<%= userInput.parent_phone || '' %>" required placeholder="08012345678">
      </div>

      <div class="form-group">
        <label>Address (if different)</label>
        <input type="text" name="parent_address" value="<%= userInput.parent_address || '' %>">
      </div>

      <div class="form-group">
        <label>Relationship </label>
        <select name="parent_relationship" required>
          <option value="">Select Relationship</option>
          <option value="Father" <%= userInput.parent_relationship === 'Father' ? 'selected' : '' %>>Father</option>
          <option value="Mother" <%= userInput.parent_relationship === 'Mother' ? 'selected' : '' %>>Mother</option>
          <option value="Guardian" <%= userInput.parent_relationship === 'Guardian' ? 'selected' : '' %>>Guardian</option>
          <option value="Other" <%= userInput.parent_relationship === 'Other' ? 'selected' : '' %>>Other</option>
        </select>
      </div>

 

      <button type="submit">Create User</button>
    </form>

    <div class="back-link">
      <a href="/admin/users">Back to Users</a> | 
      <a href="/dashboard">Dashboard</a>
    </div>
  </div>

  <script>
    function previewPhoto(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = e => document.getElementById('preview').src = e.target.result;
        reader.readAsDataURL(file);
      }
    }
  </script>
</body>
</html>