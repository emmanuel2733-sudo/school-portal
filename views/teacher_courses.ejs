<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: linear-gradient(135deg, #f0f2f5 0%, #e0e7ff 100%); min-height: 100vh; font-family: 'Segoe UI', sans-serif; }
    .navbar { background: #1e293b; box-shadow: 0 4px 20px rgba(0,0,0,0.1); }
    .page-header { text-align: center; margin: 40px 0 30px; color: #1e293b; }
    .current-term-display { 
      background: #10b981; color: white; padding: 12px 30px; border-radius: 50px; 
      font-weight: 700; font-size: 1.2rem; display: inline-block; 
      box-shadow: 0 4px 15px rgba(16,185,129,0.3);
    }

    /* COLLAPSIBLE CLASS CARD */
    .class-accordion {
      background: white; border-radius: 16px; box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      margin-bottom: 25px; overflow: hidden; transition: all 0.3s ease;
    }
    .class-accordion:hover { box-shadow: 0 15px 35px rgba(0,0,0,0.12); }

    .accordion-button {
      background: linear-gradient(120deg, #3b82f6, #2563eb); color: white;
      font-size: 1.5rem; font-weight: 600; padding: 20px 25px; border: none;
      border-radius: 16px 16px 0 0 !important;
    }
    .accordion-button:not(.collapsed) {
      background: linear-gradient(120deg, #2563eb, #1d4ed8);
      box-shadow: none;
    }
    .accordion-button::after { filter: brightness(0) invert(1); }

    .course-item {
      padding: 18px 25px; border-bottom: 1px solid #eee;
      display: flex; justify-content: space-between; align-items: center;
      transition: background 0.2s;
    }
    .course-item:hover { background: #f8fafc; }
    .course-item:last-child { border-bottom: none; }

    .course-name { font-weight: 600; font-size: 1.1rem; color: #1e293b; }
    .badge-enrolled { background: #3b82f6; color: white; }
    .badge-scored { background: #10b981; color: white; }

    .btn-grade {
      background: #10b981; color: white; padding: 10px 28px;
      border-radius: 50px; font-weight: 600; transition: all 0.3s;
    }
    .btn-grade:hover { background: #059669; transform: translateY(-2px); }
    .btn-grade.disabled { background: #94a3b8; pointer-events: none; opacity: 0.7; }

    /* DASHBOARD-STYLE BUTTONS (for grading sheet too!) */
    .btn-dashboard {
      background: #6366f1; color: white; padding: 12px 32px;
      border-radius: 50px; font-weight: 600; font-size: 1.1rem;
      box-shadow: 0 5px 15px rgba(99,102,241,0.4);
      transition: all 0.3s;
    }
    .btn-dashboard:hover {
      background: #4f46e5; transform: translateY(-3px); box-shadow: 0 8px 25px rgba(99,102,241,0.5);
    }
    .btn-back {
      background: transparent; color: #6366f1; border: 2px solid #6366f1;
    }
    .btn-back:hover {
      background: #6366f1; color: white;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/dashboard">Teacher Portal</a>
      <div class="d-flex gap-2">
        <!-- <a href="/teacher/history" class="btn btn-outline-light btn-sm">History</a> -->
        <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h2>My Courses – <%= current_term_name %></h2>
      <div class="current-term-display"><%= current_term_name %></div>
    </div>

    <% if (!classes || classes.length === 0) { %>
      <div class="text-center py-5">
        <p class="text-muted fs-4">No courses assigned this term.</p>
      </div>
    <% } else { %>

      <% 
        const grouped = {};
        classes.forEach(c => {
          if (!grouped[c.class_name]) grouped[c.class_name] = [];
          grouped[c.class_name].push(c);
        });
      %>

      <div class="accordion" id="classAccordion">
        <% Object.keys(grouped).sort().forEach((className, index) => { %>
          <div class="class-accordion">
            <h2 class="accordion-header">
              <button class="accordion-button <%= index === 0 ? '' : 'collapsed' %>" 
                      type="button" data-bs-toggle="collapse" 
                      data-bs-target="#collapse<%= index %>" 
                      aria-expanded="<%= index === 0 ? 'true' : 'false' %>">
                <%= className %>
                <span class="ms-auto me-4 small opacity-90">
                  <%= grouped[className].reduce((a,c) => a + c.enrolled_count, 0) %> total students
                </span>
              </button>
            </h2>
            <div id="collapse<%= index %>" 
                 class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" 
                 data-bs-parent="#classAccordion">
              <div class="accordion-body p-0">
                <% grouped[className].forEach(course => { %>
                  <div class="course-item">
                    <div>
                      <div class="course-name"><%= course.course_name %></div>
                      <small class="text-muted">
                        <span class="badge badge-enrolled me-2"><%= course.enrolled_count %> enrolled</span>
                        <span class="badge badge-scored"><%= course.scored_count %> scored</span>
                      </small>
                    </div>
                    <a href="/teacher/grade/course/<%= course.course_id %>"
                       class="btn btn-grade <%= course.enrolled_count === 0 ? 'disabled' : '' %>">
                      Grade →
                    </a>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

    <% } %>

   <div class="text-center my-5">
      <a href="/dashboard" class="btn btn-outline-primary btn-lg">Back to Dashboard</a>
    </div>
  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>