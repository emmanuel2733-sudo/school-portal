<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Attendance - <%= class_name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    :root { --primary: #6366f1; --success: #10b981; --danger: #e74a3b; }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { background: #f8fafc; min-height: 100vh; font-family: 'Segoe UI', sans-serif; }

    .navbar {
      position: fixed;
      top: 0; left: 0; right: 0;
      background: white !important;
      padding: 1.2rem 0;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      border-bottom: 1px solid #e2e8f0;
      z-index: 1000;
    }
    .navbar-brand {
      color: #1a202c !important;
      font-weight: 800;
      font-size: 1.8rem;
    }
    .back-btn, .save-all-btn {
      width: 50px; height: 50px; border-radius: 50%;
      display: flex; align-items: center; justify-content: center;
      font-size: 1.4rem; box-shadow: 0 5px 15px rgba(0,0,0,0.15);
      transition: all 0.3s;
    }
    .back-btn { background: var(--primary); color: white; text-decoration: none; }
    .back-btn:hover { background: #4f46e5; transform: scale(1.1); }
    .save-all-btn { background: var(--success); color: white; border: none; cursor: pointer; }
    .save-all-btn:hover:not(:disabled) { background: #059669; transform: scale(1.1); }
    .save-all-btn:disabled { background: #6b7280; cursor: not-allowed; }

    .class-badge {
      background: linear-gradient(135deg, #ff6b9d, #ff8ab3);
      color: white; padding: 10px 24px; border-radius: 50px;
      font-weight: 700; font-size: 1rem; box-shadow: 0 5px 15px rgba(255,107,157,0.4);
    }
    .grade-link {
      font-size: 0.95rem; color: #6366f1; text-decoration: underline; display: block; margin-top: 8px;
    }
    .grade-link:hover { color: #4f46e5; }

    .content { margin-top: 100px; padding: 20px 30px; }
    .attendance-card { background: white; border: 1px solid #e2e8f0; box-shadow: 0 10px 30px rgba(0,0,0,0.08); }
    .card-header-custom {
      background: white; padding: 25px 30px; border-bottom: 3px solid #0d6efd;
      display: flex; justify-content: space-between; align-items: center;
    }
    .card-header-custom h3 { margin: 0; font-size: 1.8rem; font-weight: 700; color: #1a202c; }
    .days-input { width: 90px; text-align: center; font-weight: bold; font-size: 1.1rem; }
    .saved-row { background: #d4edda !important; transition: background 0.6s; }
  </style>
</head>
<body>

  <!-- YOUR EXACT NAVBAR — SCHOOL PORTAL + ICONS ON RIGHT -->
  <nav class="navbar">
    <div class="container-fluid px-4">
      <a class="navbar-brand" href="/dashboard">School Portal</a>
      <div class="d-flex align-items-center gap-3">
        <span class="class-badge">Class Teacher — <%= class_name %></span>
        <button id="saveAllBtn" class="save-all-btn" title="Save All Attendance">
          <i class="fas fa-save"></i>
        </button>
        <a href="/dashboard" class="back-btn" title="Back to Dashboard">
          <i class="fas fa-arrow-left"></i>
        </a>
      </div>
    </div>
  </nav>

  <div class="content container">
    <div class="attendance-card">
      <!-- HEADER + GRADE LINK INSIDE ONE CARD -->
      <div class="card-header-custom">
        <div>
          <h3><i class="fas fa-calendar-check"></i> Attendance Sheet</h3>
          <p class="mb-0 mt-2 text-muted">
            <strong><%= class_name %></strong> — <%= current_term_name %>
          </p>
        </div>
        <div class="text-end">
          <a href="/teacher/courses" class="grade-link">
            Click here to grade results
          </a>
        </div>
      </div>

      <div class="card-body p-4">
        <% if (errorMsg) { %>
          <div class="alert alert-danger"><%= errorMsg %></div>
        <% } %>
        <% if (successMsg) { %>
          <div class="alert alert-success"><%= successMsg %></div>
        <% } %>

        <% if (students.length === 0) { %>
          <p class="text-center text-muted fs-3 py-5">No students found in <%= class_name %></p>
        <% } else { %>
          <div class="table-responsive">
            <div class="row mb-4">
  <div class="col-md-4">
    <label class="form-label fw-bold">Total School Days</label>
    <input type="number" id="totalDays" class="form-control" min="1">
  </div>

  <div class="col-md-4">
    <label class="form-label fw-bold">Next Term Begins</label>
    <input type="date" id="nextTermDate" class="form-control">
  </div>
</div>

            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th width="80">S/N</th>
                  <th>Student Name</th>
                  <th width="180">Days Present</th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach((student, index) => { %>
                  <tr data-id="<%= student.id %>">
                    <td><%= index + 1 %></td>
                    <td><strong><%= student.name %></strong></td>
                    <td>
                      <input type="number" min="0" max="200" 
                             value="<%= student.days_present %>" 
                             class="form-control days-input"
                             data-id="<%= student.id %>">
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
document.getElementById('saveAllBtn').addEventListener('click', async function() {
  const btn = this;
  btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

  const inputs = document.querySelectorAll('.days-input');
  const data = [];

  inputs.forEach(input => {
    if (input.value !== '') {
      data.push({
        studentId: input.dataset.id,
        daysPresent: parseInt(input.value)
      });
    }
  });

  const totalSchoolDays = document.getElementById('totalDays').value;
  const nextTermBegins = document.getElementById('nextTermDate').value;

  try {
    const res = await fetch('/teacher/attendance/save-all', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        data,
        meta: { totalSchoolDays, nextTermBegins }
      })
    });

    const result = await res.json();
    alert(result.message);

  } catch (err) {
    alert('Save failed');
  } finally {
    btn.disabled = false;
    btn.innerHTML = '<i class="fas fa-save"></i>';
  }
});

  </script>
</body>
</html>