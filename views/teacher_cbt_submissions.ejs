<!DOCTYPE html>
<html>
<head>
<title>Submissions</title>
<style>
    body {
        font-family: Arial;
        background: #f5f5f5;
        padding: 20px;
    }

    .container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        max-width: 900px;
        margin: auto;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    table { width:100%; border-collapse:collapse; margin-top:20px; }
    th, td { padding:10px; border:1px solid #ccc; text-align:left; }

    .btn-back {
        display:inline-block;
        padding:10px 15px;
        background:#6c757d;
        color:white;
        text-decoration:none;
        border-radius:5px;
        margin-top:20px;
    }

    .btn-back:hover {
        background:#5a6268;
    }
</style>
</head>

<body>

<div class="container">
    <h1>Student Submissions</h1>

    <% if (!rows || rows.length === 0) { %>
        <p>No submissions yet.</p>
    <% } else { %>

        <table>
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Score</th>
            </tr>

            <% rows.forEach(r => { %>
                <tr>
                    <td><%= r.name %></td>
                    <td><%= r.username %></td>
                    <td><%= r.score %></td>
                </tr>
            <% }) %>
        </table>

    <% } %>

    <!-- BACK BUTTON -->
    <a href="/teacher/cbt" class="btn-back">â¬… Back</a>

</div>

</body>
</html>
