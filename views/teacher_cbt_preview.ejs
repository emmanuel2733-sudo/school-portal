<!DOCTYPE html>
<html>
<head>
    <title>Exam Preview – <%= exam.course_name %></title>

    <style>
        body {
            background:#e9ecef;
            font-family: Arial;
            padding: 25px;
        }

        .exam-box {
            background: white;
            max-width: 1100px;
            margin: auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow:0 4px 20px rgba(0,0,0,0.15);
        }

        h1 {
            text-align:center;
            margin-bottom: 10px;
        }

        .subtitle {
            text-align:center;
            color:#555;
            margin-bottom: 25px;
        }

        .page-indicator {
            text-align:center;
            font-weight:bold;
            margin-bottom:25px;
            color:#444;
        }

        /* GRID LAYOUT: 2 CARDS PER ROW */
        .question-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        .question-card {
            background:#fdfdfd;
            padding:20px;
            border-radius:10px;
            border:1px solid #ddd;
        }

        .question-number {
            font-weight:bold;
            font-size:1.2em;
            margin-bottom:10px;
            color:#333;
        }

        .question-text {
            font-size:1.1em;
            margin-bottom:15px;
            line-height:1.6em;
        }

        .question-image img {
            max-width:100%;
            max-height:250px;
            border-radius:8px;
            border:1px solid #ccc;
            margin:10px 0 15px 0;
        }

        .option {
            padding:8px 12px;
            margin:6px 0;
            background:#f8f9fa;
            border-radius:6px;
            border:1px solid #ddd;
            font-size:1.05em;
        }

        .correct {
            border-color:#28a745;
            background:#e9f9ee;
            font-weight:bold;
        }

        .nav-btn {
            display:inline-block;
            padding:10px 15px;
            background:#007bff;
            color:white;
            border-radius:6px;
            text-decoration:none;
            margin:5px;
        }

        .back-btn {
            display:inline-block;
            padding:10px 15px;
            background:#6c757d;
            color:white;
            border-radius:6px;
            text-decoration:none;
            margin-top:25px;
        }

        @media (max-width: 800px) {
            .question-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>

<div class="exam-box">

    <h1>Preview – <%= exam.course_name %></h1>
    <div class="subtitle"><%= exam.class_name %></div>

    <% if (questions.length === 0) { %>
        <p>No questions added yet.</p>
    <% } %>

    <!-- PAGINATION LOGIC -->
    <% 
        const perPage = 4;
        const totalPages = Math.ceil(questions.length / perPage);
        const start = (page - 1) * perPage;
        const end = start + perPage;
        const pageQuestions = questions.slice(start, end);
    %>

    <!-- PAGE INDICATOR -->
    <div class="page-indicator">
        Page <%= page %> of <%= totalPages %>
    </div>

    <!-- QUESTIONS GRID -->
    <div class="question-grid">

        <% pageQuestions.forEach((q, index) => { %>
            <div class="question-card">

                <div class="question-number">
                    Question <%= start + index + 1 %>
                </div>

                <div class="question-text">
                    <%= q.question %>
                </div>

                <% if (q.image_path) { %>
                    <div class="question-image">
                        <img src="/uploads/questions/<%= q.image_path %>">
                    </div>
                <% } %>

                <!-- OPTIONS -->
                <% [q.option1, q.option2, q.option3, q.option4].forEach((opt, i) => { %>
                    <% if (opt) { %>
                        <div class="option <%= q.correct_option == i + 1 ? 'correct' : '' %>">
                            <strong><%= String.fromCharCode(65 + i) %>.</strong> <%= opt %>
                        </div>
                    <% } %>
                <% }) %>

            </div>
        <% }) %>

    </div>

    <!-- PAGINATION BUTTONS -->
    <div style="text-align:center; margin-top:25px;">
        <% if (page > 1) { %>
            <a href="?page=<%= page - 1 %>" class="nav-btn">⬅ Prev</a>
        <% } %>

        <% if (page < totalPages) { %>
            <a href="?page=<%= page + 1 %>" class="nav-btn">Next ➡</a>
        <% } %>
    </div>

    <a href="/teacher/cbt" class="back-btn">⬅ Back</a>

</div>

</body>
</html>
