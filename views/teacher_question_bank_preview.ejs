<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Preview Questions</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    :root {
      --primary: #6366f1;
      --success: #10b981;
      --danger: #e74a3b;
      --warning: #f59e0b;
      --info: #3b82f6;
      --card-bg: #f8fafc;
    }

    body {
      background: #f1f5f9;
      font-family: 'Segoe UI', sans-serif;
      padding: 20px;
      min-height: 100vh;
    }

    /* PAGE HEADER */
    .header-box {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.08);
      border: 1px solid #e2e8f0;
      margin-bottom: 25px;
    }

    .header-title {
      font-size: 2rem;
      font-weight: 800;
      color: #1a202c;
      margin-bottom: 5px;
    }

    .header-sub {
      color: #64748b;
      font-size: 1rem;
    }

    /* QUESTION CARD */
    .question-card {
      background: var(--card-bg);
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 18px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 6px 18px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
    }

    .question-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.12);
      background: #f1f5f9;
    }

    .question-number {
      font-size: 1.3rem;
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 10px;
    }

    .question-text {
      font-size: 1.1rem;
      font-weight: 600;
      color: #1e293b;
      margin-bottom: 15px;
    }

    /* OPTIONS */
    .option {
      background: white;
      padding: 10px 15px;
      border-radius: 8px;
      margin-bottom: 8px;
      border: 1px solid #e2e8f0;
      font-weight: 500;
      color: #334155;
      display: flex;
      align-items: center;
      gap: 10px;
      transition: all 0.2s ease;
    }

    .option:hover {
      background: #eef2ff;
      border-color: var(--primary);
    }

    .alpha-box {
      background: var(--primary);
      color: white;
      padding: 5px 12px;
      border-radius: 6px;
      font-weight: 700;
      font-size: 0.9rem;
      min-width: 38px;
      text-align: center;
    }

    /* IMAGE */
    .question-img {
      margin-top: 12px;
      max-width: 180px;
      border-radius: 8px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }

    /* ANIMATION */
    .fade {
      opacity: 0;
      transform: translateY(10px);
      transition: opacity 0.4s ease, transform 0.4s ease;
    }
  </style>
</head>

<body>

  <div class="header-box">
    <h2 class="header-title"><i class="fas fa-eye"></i> Question Bank Preview</h2>
    <p class="header-sub">A complete ready-to-print preview of all questions</p>
  </div>

  <% questions.forEach((q, i) => { %>
    <div class="question-card fade">
      <div class="question-number">Question <%= i+1 %></div>

      <div class="question-text"><%= q.question %></div>

      <!-- OPTIONS -->
      <div class="option">
        <div class="alpha-box">A</div> <%= q.option1 %>
      </div>
      <div class="option">
        <div class="alpha-box">B</div> <%= q.option2 %>
      </div>
      <div class="option">
        <div class="alpha-box">C</div> <%= q.option3 %>
      </div>
      <div class="option">
        <div class="alpha-box">D</div> <%= q.option4 %>
      </div>

      <% if (q.image_path) { %>
        <img class="question-img" src="/uploads/questions/<%= q.image_path %>">
      <% } %>
    </div>
  <% }) %>


  <script>
    // Fade-in animation for question cards
    document.addEventListener("DOMContentLoaded", () => {
      const cards = document.querySelectorAll(".question-card");
      cards.forEach((card, idx) => {
        setTimeout(() => {
          card.style.opacity = "1";
          card.style.transform = "translateY(0)";
        }, idx * 80);
      });
    });
  </script>

</body>
</html>
