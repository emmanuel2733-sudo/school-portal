  <div class="slides">
    <div class="slide active">
      <img src="/images/slide1.png" alt="1">
      <img src="/images/slide2.png" alt="2">
    </div>
    <div class="slide">
      <img src="/images/slide3.png" alt="3">
      <img src="/images/slide4.png" alt="4">
    </div>
