            <img src="/images/slide1.png" alt="Learning Innovation">
            <img src="/images/slide2.png" alt="School Facilities">
          </div>
          <div class="slide">
            <img src="/images/slide3.png" alt="Student Activities">
            <img src="/images/slide4.png" alt="Academic Excellence">
          </div>
          <div class="slide">
            <img src="/images/slide5.png" alt="Technology Integration">
            <img src="/images/slide6.png" alt="Community Engagement">
          </div>
        </div>
      </div>

      <!-- Dashboard Grid -->
      <div class="dashboard-grid">
        <!-- Enrolled Courses -->
        <div class="dashboard-card animate-fade-in">
          <div class="card-header">
            <h3><i class="fas fa-book"></i> Enrolled Courses</h3>
            <span class="badge bg-primary"><%= enrolledCourses ? enrolledCourses.length : '0' %> courses</span>
          </div>
          <div class="subject-list">
            <% if (enrolledCourses && enrolledCourses.length > 0) { %>
              <% enrolledCourses.forEach((course, index) => { %>
                <div class="subject-card">
                  <div class="subject-icon">
                    <%= course.charAt(0).toUpperCase() %>
                  </div>
                  <div class="subject-info">
                    <div class="subject-name"><%= course %></div>
                    <div class="subject-progress">
                      <div class="progress-bar">
                        <div class="progress-fill"></div>
                      </div>
                      <span class="text-muted" style="font-size: 0.85rem;">85%</span>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-book-open"></i>
                <p>No courses enrolled yet</p>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Academic Information -->
        <div class="dashboard-card animate-fade-in delay-1">
          <div class="card-header">
            <h3><i class="fas fa-graduation-cap"></i> Academic Information</h3>
          </div>
          <div class="info-grid">
            <div class="info-item">
              <div class="info-label">Full Name</div>
              <div class="info-value"><%= user.userName %></div>
            </div>
            <div class="info-item">
              <div class="info-label">Class</div>
              <div class="info-value"><%= studentClass %></div>
            </div>
            <div class="info-item">
              <div class="info-label">Current Term</div>
              <div class="info-value"><%= cleanTermDisplay || 'First Term' %></div>
            </div>
            <div class="info-item">
              <div class="info-label">Academic Session</div>
              <div class="info-value"><%= sessionYear %></div>
            </div>
            <div class="info-item">
              <div class="info-label">Student ID</div>
              <div class="info-value">#<%= user.id || 'STU001' %></div>
            </div>
            <div class="info-item">
              <div class="info-label">Attendance</div>
              <div class="info-value">98%</div>
            </div>
          </div>
