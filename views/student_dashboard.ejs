    <!-- MAIN CONTENT -->
    <div class="main-content">
      <!-- Top Bar -->
      <div class="top-bar animate-fade-in">
        <div class="school-brand">
          <div class="school-logo">LA</div>
          <div class="school-name">LYTEBRIDGE ACADEMY</div>
        </div>
        <div class="top-controls">
          <div class="session-badge">
            <i class="fas fa-calendar-alt"></i>
            <%= sessionYear || '2024/2025' %> â€¢ <%= studentClass || 'JSS 2' %>
          </div>
          <button class="theme-toggle" id="theme-toggle"></button>
          <a href="/logout" class="logout-btn">
            <i class="fas fa-power-off"></i>
          </a>
        </div>
      </div>

      <!-- Welcome Hero -->
      <div class="welcome-hero animate-fade-in delay-1">
        <div class="welcome-hero-content">
          <h1>Welcome Back, <%= user.userName.split(' ')[0] %>! ðŸŽ“</h1>
          <p>Your learning journey continues. Explore resources, track progress, and achieve excellence.</p>
          <div class="welcome-stats">
            <div class="stat-item">
              <span class="stat-number"><%= enrolledCourses ? enrolledCourses.length : '0' %></span>
              <span class="stat-label">Enrolled Courses</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">98%</span>
              <span class="stat-label">Attendance Rate</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">A+</span>
              <span class="stat-label">Average Grade</span>
            </div>
