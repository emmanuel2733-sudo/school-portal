<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Teacher Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --primary: #5a67d8;
      --success: #48bb78;
      --danger: #e74a3b;
      --dark: #2d3748;
      --gray: #718096;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: #ffffff;
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }

    /* NAVBAR */
    .navbar {
      background: white !important;
      padding: 1.2rem 0;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      border-bottom: 1px solid #e2e8f0;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .navbar-brand { color: #1a202c !important; font-weight: 800; font-size: 1.8rem; }
    .power-btn {
      width: 50px; height: 50px; background: #e74a3b; color: white; border-radius: 50%;
      display: flex; align-items: center; justify-content: center; font-size: 1.4rem;
      transition: all 0.3s; box-shadow: 0 5px 15px rgba(231,74,59,0.4);
    }
    .power-btn:hover { background: #c82333; transform: scale(1.1); }
    .class-teacher-badge {
      background: linear-gradient(135deg, #ff6b9d, #ff8ab3); color: white;
      padding: 10px 24px; border-radius: 50px; font-weight: 700; font-size: 1rem;
      box-shadow: 0 5px 15px rgba(255,107,157,0.4);
    }

    /* MAIN CONTENT FIRST,ON MOBILE */
    .main-content {
      flex: 1;
      padding: 30px 20px;
      background: #f8fafc;
      order: 1; /* This forces it to appear BEFORE sidebar on mobile */
    }

    .welcome-card {
      background: white; padding: 40px; border: 1px solid #e2e8f0;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08); margin-bottom: 30px;
      border-radius: 16px;
    }
    .profile-photo {
      width: 180px; height: 180px; object-fit: cover; border: 8px solid #fff;
      box-shadow: 0 15px 35px rgba(0,0,0,0.25); border-radius: 50%;
      cursor: pointer; transition: transform 0.3s;
    }
    .profile-photo:hover { transform: scale(1.05); }

    .role-badge {
      background: var(--success); color: white; padding: 10px 30px;
      font-weight: 700; font-size: 1.1rem; display: inline-block; border-radius: 50px;
    }

    .card-block {
      background: white; padding: 35px; border: 1px solid #e2e8f0;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08); border-radius: 16px;
    }
    .detail-row {
      padding: 14px 0; border-bottom: 1px dashed #e2e8f0; font-size: 1.1rem;
    }
    .detail-label {
      font-weight: 600; color: #4a5568; width: 180px; display: inline-block;
    }
    .course-item {
      background: #f8fafc; padding: 20px; border: 1px solid #e2e8f0; margin-bottom: 15px; border-radius: 12px;
    }

    /* SIDEBAR - APPEARS AFTER MAIN CONTENT ON MOBILE */
    .sidebar {
      width: 310px; background: #fcfcfd; padding: 35px 25px; border-right: 1px solid #e2e8f0;
      order: 2; /* Comes after main content on small screens */
    }
    .quick-actions-title {
      color: #1a202c; font-size: 1.6rem; font-weight: 700; text-align: center;
      margin-bottom: 40px; padding-bottom: 15px; border-bottom: 3px solid #4a5568;
    }
    .action-btn {
      display: flex; align-items: center; width: 100%; padding: 18px 22px; margin-bottom: 16px;
      background: linear-gradient(135deg, #667eea, #764ba2); color: white; font-weight: 600;
     ,font-size: 1.1rem; text-decoration: none; transition: all 0.3s ease; border: none; border-radius: 12px;
    }
    .action-btn:nth-child(3) { background: linear-gradient(135deg, #f093fb, #f5576c); }
    .action-btn:nth-child(4) { background: linear-gradient(135deg, #4facfe, #00f2fe); }
    .action-btn:nth-child(5) { background: linear-gradient(135deg, #43e97b, #38f9d7); }
    .action-btn:nth-child(6) { background: linear-gradient(135deg, #fa709a, #fee140); }
    .action-btn:nth-child(7) { background: linear-gradient(135deg, #ff9a9e, #fad0c4); }
    .action-btn:nth-child(8) { background: linear-gradient(135deg, #a8edea, #fed6e3); color:#444; }
    .action-btn i { font-size: 1.5rem; margin-right: 16px; width: 35px; text-align: center; }
    .action-btn:hover { transform: translateX(12px); box-shadow: 0 8px 25px rgba(0,0,0,0.3); }
    .action-btn:disabled { background: #a0aec0; cursor: not-allowed; opacity: 0.7; }

    /* FLEX LAYOUT - Desktop: sidebar left, Mobile: content first */
    .main-layout {
      display: flex;
      min-height: calc(100vh - 84px);
      flex-wrap: wrap;
    }

    /* Desktop: sidebar on left */
    @media (min-width: 993px) {
      .main-layout { flex-wrap: nowrap; }
      .sidebar { order: 0; width: 310px; border-right: 1px solid #e2e8f0; border-bottom: none; }
      .main-content { order: 1; }
    }

    /* Mobile adjustments */
    @media (max-width: 768px) {
      .profile-photo { width: 150px; height: 150px; }
      .welcome-card { padding: 30px 20px; }
      .card-block { padding: 25px 20px; }
    }
  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="container-fluid px-4">
      <a class="navbar-brand" href="/dashboard">School Portal</a>
      <div class="d-flex align-items-center gap-3">
        <% if (classTeacherOf && classTeacherOf.trim() !== '') { %>
          <div class="class-teacher-badge">Class Teacher — <%= classTeacherOf %></div>
        <% } %>
        <a href="/logout" class="power-btn"><i class="fas fa-power-off"></i></a>
      </div>
    </div>
  </nav>

  <!-- MAIN LAYOUT: CONTENT FIRST ON MOBILE -->
  <div class="main-layout">

    <!-- MAIN CONTENT - APPEARS FIRST ON MOBILE -->
    <div class="main-content">

      <!-- WELCOME CARD WITH PHOTO UPLOAD -->
      <div class="welcome-card text-center text-md-start">
        <h2 class="mb-4" style="font-size:2.8rem;font-weight:800;color:#1a202c;">Welcome Back!</h2>
        
        <div class="d-flex flex-column flex-md-row align-items-center gap-5">
        <!-- PHOTO + CAMERA ICON (click anywhere on photo or icon to upload) -->
<div class="position-relative d-inline-block">
  <img 
    src="<%= user.photo && user.photo !== 'default-photo.jpg' ? '/uploads/' + user.photo : '/images/default-photo.jpg' %>" 
    alt="Profile" 
    class="profile-photo"
    onerror="this.src='/images/default-photo.jpg'"
    id="dashboardPhoto"
    style="cursor:pointer;"
  >

  <!-- Camera icon in bottom-right corner -->
  <label for="photoUpload" class="position-absolute bottom-0 end-0 mb-3 me-3 btn btn-primary rounded-circle p-3 shadow-lg" style="cursor:pointer;">
    <i class="fas fa-camera fa-lg"></i>
  </label>
</div>

<!-- REAL FORM – visible to browser (but we hide it visually with opacity/position) -->
<form id="uploadForm" action="/teacher/upload-photo" method="POST" enctype="multipart/form-data" class="position-absolute" style="opacity:0; width:0; height:0;">
  <input type="file" name="photo" id="photoUpload" accept="image/jpeg,image/jpg,image/png" required>
</form>

          <div>
            <h3 style="font-size:2.4rem;margin:0;color:#1a202c;"><%= user.name || user.username %></h3>
            <div class="role-badge mt-3">TEACHER</div>
          </div>
        </div>

        <!-- Hidden Upload Form -->
        <form action="/teacher/upload-photo" method="POST" enctype="multipart/form-data" class="d-none">
          <input type="file" name="photo" id="photoUpload" accept="image/jpeg,image/jpg,image/png" required>
        </form>
      </div>

      <!-- PERSONAL INFO + COURSES -->
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="card-block">
            <h4 class="mb-4" style="font-size:1.6rem;font-weight:700;color:#1a202c;border-bottom:3px solid #e2e8f0;padding-bottom:12px;">
              Personal Information
            </h4>
            <div class="detail-row"><span class="detail-label">Full Name:</span> <%= user.name || 'Not set' %></div>
            <div class="detail-row"><span class="detail-label">Username:</span> @<%= user.username %></div>
            <div class="detail-row"><span class="detail-label">Gender:</span> <%= user.sex || 'Not set' %></div>
            <div class="detail-row">
              <span class="detail-label">Date of Birth:</span> 
              <% if (user.dob) { %>
                <%= new Date(user.dob).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                <% 
                  const birth = new Date(user.dob);
                  const today = new Date();
                  let age = today.getFullYear() - birth.getFullYear();
                  const m = today.getMonth() - birth.getMonth();
                  if (m < 0 || (m === 0 && today.getDate() < birth.getDate())) age--;
                %>
                <span class="text-muted">(Age: <%= age %>)</span>
              <% } else { %> Not set <% } %>
            </div>
            <div class="detail-row"><span class="detail-label">Address:</span> <%= user.address || 'Not set' %></div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="card-block">
            <h4 class="mb-4" style="font-size:1.6rem;font-weight:700;color:#1a202c;border-bottom:3px solid #e2e8f0;padding-bottom:12px;">
              Assigned Courses
            </h4>
            <% 
              const courseList = Array.isArray(courses) ? courses : [];
            %>
            <% if (courseList.length > 0) { %>
              <% courseList.forEach(course => { %>
                <div class="course-item">
                  <h5 style="margin:0;font-weight:600;"><%= course.course_name || 'Untitled' %></h5>
                  <p style="margin:8px 0 0;color:#718096;">Class: <strong><%= course.class_name || 'N/A' %></strong></p>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-center text-muted fs-4">No courses assigned yet.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- SIDEBAR - APPEARS AFTER MAIN CONTENT ON MOBILE -->
    <div class="sidebar">
      <h3 class="quick-actions-title">Quick Actions</h3>
      <a href="/teacher/courses" class="action-btn"><i class="fas fa-clipboard-check"></i> Results</a>
      <a href="/teacher/profile" class="action-btn"><i class="fas fa-user"></i> My Profile</a>
      <% if (classTeacherOf && classTeacherOf.trim() !== '') { %>
        <a href="/teacher/attendance" class="action-btn"><i class="fas fa-calendar-check"></i> Attendance Sheet</a>
      <% } else { %>
        <button class="action-btn" disabled><i class="fas fa-calendar-check"></i> Attendance Sheet</button>
      <% } %>
      <a href="/teacher/topics" class="action-btn"><i class="fas fa-book"></i> Manage Topics</a>
      <a href="/teacher/e-library" class="action-btn"><i class="fas fa-book-open"></i> E-Library</a>
      <a href="/teacher/class-activities" class="action-btn"><i class="fas fa-gamepad"></i> Class Activities</a>
      <a href="/teacher/cbt" class="action-btn"><i class="fas fa-laptop-code"></i> CBT Exams</a>
      <a href="/teacher/virtual-class" class="action-btn"><i class="fas fa-video"></i> Virtual Class</a>
       <a href="/teacher/question-bank" class="action-btn"><i class="fas fa-book"></i> Question Bank</a>
    

    </div>
  </div>

  <!-- Click photo or icon to upload -->
  <script>
const photoImg = document.getElementById('dashboardPhoto');
  const fileInput = document.getElementById('photoUpload');
  const form = document.getElementById('uploadForm');

  // Click on photo OR camera icon → open file picker
  photoImg?.addEventListener('click', () => fileInput.click());
  
  // When user selects a file → automatically submit the form
  fileInput?.addEventListener('change', () => {
    if (fileInput.files.length > 0) {
      form.submit();               // This actually uploads!
    }
  });


    document.getElementById('dashboardPhoto')?.addEventListener('click', () => {
      document.getElementById('photoUpload').click();
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>