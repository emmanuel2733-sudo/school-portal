<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Topics • LYTEBRIDGE ACADEMY</title>

  <!-- Fonts & Icons -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

  <!-- Bootstrap 5 CSS + JS (required for collapse) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    :root {
      --pink: #ff6b9d;
      --cream: #fdf5e6;
      --light-pink: #ffe6f0;
      --gray: #6c757d;
      --shadow: 0 6px 16px rgba(255, 107, 157, 0.15);
      --bg: #fdf5e6;
      --card-bg: #ffffff;
      --text: #333333;
      --border: #ffe0e9;
      --radius: 16px;
    }
    [data-theme="dark"] {
      --pink: #ff8ab3;
      --light-pink: #2d1b3a;
      --gray: #b0b0b0;
      --shadow: 0 6px 16px rgba(0,0,0,0.4);
      --bg: #121212;
      --card-bg: #1e1e1e;
      --text: #e0e0e0;
      --border: #333333;
    }
    * { margin:0; padding:0; box-sizing:border-box; }
    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      transition: all 0.4s ease;
    }

    /* TOP BAR */
    .top-bar {
      position: fixed;
      top: 0; left: 0; right: 0;
      background: var(--card-bg);
      padding: 1.2rem 1.5rem;
      box-shadow: var(--shadow);
      z-index: 1030;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid var(--border);
    }
    .school-name {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(90deg, var(--pink), #ff8ab3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .top-controls { display: flex; align-items: center; gap: 16px; }
    .theme-toggle {
      background: var(--card-bg);
      border: 2px solid var(--border);
      border-radius: 50px;
      width: 52px; height: 28px;
      position: relative;
      cursor: pointer;
    }
    .theme-toggle::before {
      content: '';
      position: absolute;
      top: 4px; left: 4px;
      width: 20px; height: 20px;
      background: var(--pink);
      border-radius: 50%;
      transition: 0.3s;
    }
    [data-theme="dark"] .theme-toggle::before { transform: translateX(24px); }

    .back-btn, .logout-btn {
      padding: 10px 18px;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: 0.3s;
    }
    .back-btn { background: transparent; color: var(--text); border: 2px solid var(--pink); }
    .back-btn:hover { background: var(--pink); color: white; }
    .logout-btn { background: var(--pink); color: white; box-shadow: var(--shadow); }

    /* MAIN CONTENT */
    .main-content {
      margin-top: 90px;
      padding: 30px 20px;
      max-width: 1000px;
      margin-left: auto;
      margin-right: auto;
    }
    .page-title {
      text-align: center;
      margin-bottom: 40px;
      font-size: 2.4rem;
      font-weight: 800;
      background: linear-gradient(90deg, var(--pink), #ff8ab3);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* CARDS */
    .topic-card {
      background: var(--card-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      overflow: hidden;
      margin-bottom: 24px;
      border-left: 6px solid var(--pink);
    }
    .card-header {
      background: var(--light-pink);
      padding: 20px 24px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 700;
      font-size: 1.25rem;
      color: var(--text);
      transition: all 0.3s;
    }
    .card-header:hover { background: var(--pink); color: white; }
    .card-header i {
      transition: transform 0.3s ease;
      font-size: 1.4rem;
    }
    .topic-count {
      background: var(--pink);
      color: white;
      padding: 6px 14px;
      border-radius: 50px;
      font-size: 0.9rem;
      font-weight: 600;
    }
    .topic-item {
      padding: 18px 24px;
      border-bottom: 1px dashed var(--border);
      display: flex;
      align-items: center;
      gap: 16px;
      font-size: 1.05rem;
    }
    .topic-item:last-child { border-bottom: none; }
    .topic-number {
      background: var(--pink);
      color: white;
      width: 36px; height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      flex-shrink: 0;
    }
    .no-topics { text-align: center; padding: 50px 20px; color: var(--gray); }

    @media (max-width: 768px) {
      .top-bar { flex-direction: column; gap: 16px; text-align: center; }
      .school-name { font-size: 1.6rem; }
      .page-title { font-size: 2rem; }
    }
  </style>
</head>
<body>

  <!-- TOP BAR -->
  <div class="top-bar">
    <div class="school-name">LYTEBRIDGE ACADEMY</div>
    <div class="top-controls">
      <button class="theme-toggle" id="theme-toggle"></button>
      <a href="/dashboard" class="back-btn">Back to Dashboard</a>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="main-content">
    <h1 class="page-title">My Topics This Term</h1>

    <% if (courses && courses.length > 0) { %>
      <% courses.forEach((course, index) => { %>
        <div class="topic-card">
          <!-- HEADER (Bootstrap collapse trigger) -->
          <div class="card-header"
               data-bs-toggle="collapse"
               data-bs-target="#topicCollapse<%= index %>"
               aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
               role="button">
            <div class="d-flex align-items-center gap-3">
              <i class="fas fa-chevron-down"></i>
              <div>
                <strong><%= course.course_name %></strong>
                <small class="opacity-75 ms-2">— <%= course.class_name %></small>
              </div>
            </div>
            <span class="topic-count">
              <%= course.topics ? course.topics.length : 0 %> topic<%= course.topics && course.topics.length !== 1 ? 's' : '' %>
            </span>
          </div>

          <!-- BODY (Bootstrap collapse) -->
          <div class="collapse <%= index === 0 ? 'show' : '' %>" id="topicCollapse<%= index %>">
            <div class="card-body">
              <% if (course.topics && course.topics.length > 0) { %>
                <% course.topics.forEach((topic, i) => { %>
                  <div class="topic-item">
                    <div class="topic-number"><%= i + 1 %></div>
                    <div><strong><%= topic.topic_name %></strong></div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="no-topics">
                  <p>No topics have been added by your teacher yet.</p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="text-center py-5">
        <h3 class="text-muted">No courses enrolled this term</h3>
        <p>Contact your administrator if this seems incorrect.</p>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS (must be at the end) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Dark mode toggle
    const toggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    const saved = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', saved);

    toggle.addEventListener('click', () => {
      const newTheme = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
    });

    // Rotate chevron when collapsing/expanding
    document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(el => {
      el.addEventListener('click', function () {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
      });
    });
  </script>
</body>
</html>